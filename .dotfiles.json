{
  "$schema": "./dotfiles.schema.json",
  "packages": {
    "nvim": {
      "type": "stow",
      "paths": [
        ".config/nvim"
      ]
    },
    "wezterm": {
      "type": "stow",
      "paths": [
        ".config/wezterm"
      ]
    },
    "fish": {
      "type": "stow",
      "paths": [
        ".config/fish"
      ]
    },
    "mise": {
      "type": "stow",
      "paths": [
        ".config/mise/config.toml"
      ]
    },
"opencode": {
      "type": "stow",
      "paths": [
        ".config/opencode/config.json"
      ]
    },
    "git": {
      "type": "stow",
      "paths": [
        ".gitconfig",
        ".config/git/ignore"
      ]
    },
    "keyd": {
      "type": "special",
      "paths": [
        "/etc/keyd/default.conf"
      ],
      "install": "sudo cp keyd/default.conf /etc/keyd/default.conf",
      "platforms": [
        "linux"
      ]
    }
  },
  "dependencies": {
    "required": [
      "git",
      "stow",
      "jq"
    ],
    "bootstrap": [
      "fish",
      "stow",
      "just",
      "mise",
      "jq"
    ],
    "optional": {
      "core": [
        "nvim",
        "mise",
        "fzf",
        "just"
      ],
      "dev": [
        "cargo",
        "dune"
      ],
      "enhancements": [
        "zoxide",
        "bat",
        "eza"
      ]
    }
  }
}
