{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Dotfiles Configuration",
  "description": "Configuration for dotfiles management with stow",
  "type": "object",
  "properties": {
    "packages": {
      "type": "object",
      "description": "Package definitions with their target paths",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["stow", "special"],
            "description": "Package type: 'stow' for GNU Stow managed, 'special' for custom installation"
          },
          "paths": {
            "type": "array",
            "description": "Target paths in $HOME where this package's files will be linked/installed",
            "items": {
              "type": "string"
            }
          },
          "install": {
            "type": "string",
            "description": "Custom installation command for special packages"
          },
          "platforms": {
            "type": "array",
            "description": "Platforms where this package is available (e.g., linux, darwin)",
            "items": {
              "type": "string"
            }
          }
        },
        "required": ["type", "paths"]
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "required": {
          "type": "array",
          "description": "Required dependencies for the system to work",
          "items": {
            "type": "string"
          }
        },
        "bootstrap": {
          "type": "array",
          "description": "Dependencies installed during bootstrap",
          "items": {
            "type": "string"
          }
        },
        "optional": {
          "type": "object",
          "description": "Optional dependencies grouped by category",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "required": ["packages", "dependencies"]
}
